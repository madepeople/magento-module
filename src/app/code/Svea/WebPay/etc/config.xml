<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Svea_WebPay>
            <version>4.1.0</version>
        </Svea_WebPay>
    </modules>
    <frontend>
        <secure_url>
            <svea_webpay>/svea_webpay</svea_webpay>
        </secure_url>
        <routers>
            <svea_webpay>
                <use>standard</use>
                <args>
                    <module>Svea_WebPay</module>
                    <frontName>svea_webpay</frontName>
                </args>
            </svea_webpay>
        </routers>
        <translate>
            <modules>
                <Svea_WebPay>
                    <files>
                        <default>Svea_WebPay.csv</default>
                    </files>
                </Svea_WebPay>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Svea_WebPay>
                    <files>
                        <default>Svea_WebPay.csv</default>
                    </files>
                </Svea_WebPay>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <svea_webpay>
                <class>Svea_WebPay_Model</class>
            </svea_webpay>
        </models>
        <blocks>
            <svea_webpay>
                <class>Svea_WebPay_Block</class>
            </svea_webpay>
        </blocks>
        <helpers>
            <svea_webpay>
                <class>Svea_WebPay_Helper</class>
            </svea_webpay>
        </helpers>
        <events>
            <sales_order_payment_capture>
                <observers>
                    <set_current_invoice_on_order>
                        <type>singleton</type>
                        <class>svea_webpay/observer</class>
                        <method>setCurrentInvoiceOnOrder</method>
                    </set_current_invoice_on_order>
                </observers>
            </sales_order_payment_capture>
        </events>
        <fieldsets>
            <sales_convert_quote_payment>
                <svea_invoice>
                    <to_order_payment>*</to_order_payment>
                </svea_invoice>
                <svea_paymentplan>
                    <to_order_payment>*</to_order_payment>
                </svea_paymentplan>
                <svea_hosted_card>
                    <to_order_payment>*</to_order_payment>
                </svea_hosted_card>
                <svea_hosted_direct>
                    <to_order_payment>*</to_order_payment>
                </svea_hosted_direct>
            </sales_convert_quote_payment>
        </fieldsets>
        <svea>
            <totals>
                <shipping_amount>self::_addShippingRow</shipping_amount>
            </totals>
        </svea>
    </global>
    <default>
        <payment>
            <svea_invoice>
                <active>0</active>
                <model>svea_webpay/payment_service_invoice</model>
                <title>Svea Invoice</title>
                <test>1</test>
                <payment_action>authorize</payment_action>
                <distribution_type>EMAIL</distribution_type>
            </svea_invoice>
        </payment>
    </default>
</config>